<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Progress">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastScoreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Last Score"
                android:textColor="#3EB489" />

            <EditText
                android:id="@+id/lastScore"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="@string/default_progress"
                android:textColor="#3EB489" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/averageScoreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Average Score"
                android:textColor="#3EB489" />

            <EditText
                android:id="@+id/averageScore"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:text="@string/default_progress"
                android:textColor="#3EB489" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>